<h1 class="text-center">Grams</h1>

<% @grams.each do |gram| %>
  <div>
    <%= image_tag gram.picture %>
    <%= gram.message %>
  </div>
  <div>
  <h3>Comments</h3>
  <% simple_form_for @comment do |f| %>
    <%= f.input_field :message %>
    <%= f.submit "Post a Comment" %>
  <% end %>
  </div>
  <% end %>